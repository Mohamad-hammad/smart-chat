{
  "name": "smart-chat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:lint": "npm run lint",
    "test:build": "NODE_ENV=test next build --turbopack",
    "test:all": "npm run test:lint && npm run test:build && npm run test",
    "test:ci": "npm run test:lint && npm run test:build && npm run test -- --ci --coverage --watchAll=false",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d typeorm.config.js",
    "migration:run": "npm run typeorm -- migration:run -d typeorm.config.js",
    "migration:revert": "npm run typeorm -- migration:revert -d typeorm.config.js",
    "schema:sync": "npm run typeorm -- schema:sync -d typeorm.config.js"
  },
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.540.0",
    "next": "15.5.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
