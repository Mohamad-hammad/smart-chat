{
  "name": "smart-chat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:lint": "npm run lint",
    "test:build": "NODE_ENV=test next build",
    "test:all": "npm run test:lint && npm run test:build && npm run test",
    "test:ci": "npm run test:lint && npm run test:build && npm run test -- --ci --coverage --watchAll=false",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d typeorm.config.js",
    "migration:run": "npm run typeorm -- migration:run -d typeorm.config.js",
    "migration:revert": "npm run typeorm -- migration:revert -d typeorm.config.js",
    "schema:sync": "npm run typeorm -- schema:sync -d typeorm.config.js",
    "docker:build": "docker build -t smart-chat .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.local smart-chat",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy:vercel": "vercel --prod",
    "deploy:build": "npm run lint && npm run build",
    "health": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@auth/core": "^0.34.2",
    "@stripe/stripe-js": "^7.9.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "es-toolkit": "^1.39.10",
    "lucide-react": "^0.540.0",
    "next": "15.5.0",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.8.0",
    "pg": "^8.16.3",
    "radix-ui": "^1.4.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "react-is": "^19.1.1",
    "recharts": "^3.1.2",
    "reflect-metadata": "^0.2.2",
    "stripe": "^18.5.0",
    "tailwind-merge": "^3.3.1",
    "typeorm": "^0.3.26",
    "autoprefixer": "^10.4.20",
    "typescript": "^5",
    "@types/node": "^20.19.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2"
  }
}
